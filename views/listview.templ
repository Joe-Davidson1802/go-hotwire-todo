{% package views %}

{% import "github.com/joe-davidson1802/go-hotwire-todo/models" %}

{% templ renderRow(t models.Todo) %}
<div>
    {%= t.Title %}
</div>
{% endtempl %}

{% templ ListView(ts []models.Todo) %}
    {% if len(ts) == 0 %}
        <div>{%= "no todos" %}</div>
    {% else %}
        {% for _, t := range ts %}
            {%! renderRow(t) %}
        {% endfor %}
    {% endif %}
{% endtempl %}
